<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".HomeActivity">
    <RelativeLayout
        android:layout_marginBottom="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tech_logo"
            android:visibility="invisible" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/inbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/inbox_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_markunread_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inbox"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:src="@drawable/logo"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="Welcome"
        android:textSize="23sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/label0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Browse Services by Category"
        android:textSize="18sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        android:layout_height="wrap_content">
        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_cleaning"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/button_back"
                android:gravity="center"
                android:shadowColor="#7A7777"
                android:shadowDx="2"
                android:shadowDy="8"
                android:paddingVertical="20dp"
                android:shadowRadius="8"
                android:text="Cleaning"
                android:textAllCaps="false"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_decoration"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/button_back"
                android:gravity="center"
                android:shadowColor="#7A7777"
                android:shadowDx="2"
                android:shadowDy="8"
                android:shadowRadius="8"
                android:text="Decoration"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_maintenance"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:paddingVertical="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/button_back"
                android:gravity="center"

                android:shadowColor="#7A7777"
                android:shadowDx="2"
                android:shadowDy="8"
                android:shadowRadius="8"
                android:text="Maintenance"
                android:textAllCaps="false"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_landscaping"

                android:layout_margin="5dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/button_back"
                android:gravity="center"

                android:shadowColor="#7A7777"
                android:shadowDx="2"
                android:shadowDy="8"
                android:shadowRadius="8"
                android:text="Landscaping"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_restoration"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/button_back"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:shadowColor="#7A7777"
                android:shadowDx="2"
                android:shadowDy="8"
                android:shadowRadius="8"
                android:text="Restoration"
                android:textAllCaps="false"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_renovation"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/button_back"
                android:gravity="center"

                android:shadowColor="#7A7777"
                android:shadowDx="2"
                android:shadowDy="8"
                android:shadowRadius="8"
                android:text="Renovation"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_browse_by_regions"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/button_back"
        android:textAllCaps="false"
        android:shadowColor="#7A7777"
        android:shadowDx="2"
        android:shadowDy="8"
        android:shadowRadius="8"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:paddingHorizontal="35dp"
        android:backgroundTint="@color/hit_color"
        android:text="Browse Services by Regions"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_my_service_requests"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/button_back"
        android:textAllCaps="false"
        android:shadowColor="#7A7777"
        android:shadowDx="2"
        android:shadowDy="8"
        android:shadowRadius="8"
        android:drawableStart="@drawable/ic_baseline_format_list_bulleted_24"
        android:paddingHorizontal="35dp"
        android:backgroundTint="#BFE8A5"
        android:text="My Service Requests"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_are_you_a_technician"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/button_back"
        android:textAllCaps="false"
        android:shadowColor="#7A7777"
        android:shadowDx="2"
        android:shadowDy="8"
        android:shadowRadius="8"
        android:drawableStart="@drawable/ic_baseline_home_repair_service_24"
        android:paddingHorizontal="35dp"
        android:backgroundTint="#FFEB3B"
        android:text="Are you a Technician?"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_logout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/button_back"
        android:textAllCaps="false"
        android:shadowColor="#7A7777"
        android:shadowDx="2"
        android:shadowDy="8"
        android:shadowRadius="8"
        android:drawableStart="@drawable/ic_baseline_login_24"
        android:paddingHorizontal="35dp"
        android:backgroundTint="#D0DDF3"
        android:text="Log out"/>



</androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>