<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center"
    android:background="@drawable/back"
    tools:context=".SignUpActivity">



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical"

            tools:context=".SignInActivity">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Create Your Account Now"
                android:textSize="25sp"
                android:textStyle="bold" />

<!--            <TextView-->
<!--                android:id="@+id/label0"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginVertical="10dp"-->
<!--                android:text="Enter your Full Name"-->
<!--                android:textSize="18sp" />-->

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/full_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_box_height"
                android:background="@drawable/edit_text_back"
                android:inputType="text"
                android:hint="Full Name"
                android:layout_marginBottom="15dp"
                android:paddingHorizontal="10dp" />

<!--            <TextView-->
<!--                android:id="@+id/label1"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginVertical="10dp"-->
<!--                android:text="Enter your Email Address"-->
<!--                android:textSize="18sp" />-->

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_box_height"
                android:background="@drawable/edit_text_back"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp"
                android:hint="Email"
                android:layout_marginBottom="15dp"
                />

<!--            <TextView-->
<!--                android:id="@+id/label2"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginVertical="10dp"-->
<!--                android:text="Enter your Password"-->

<!--                android:textSize="18sp" />-->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="0dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"

                app:passwordToggleEnabled="true">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_box_height"
                    android:background="@drawable/edit_text_back"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:layout_marginBottom="15dp"
                    android:paddingHorizontal="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

<!--            <TextView-->
<!--                android:id="@+id/label3"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginVertical="10dp"-->
<!--                android:text="Confirm your Password"-->
<!--                android:textSize="18sp" />-->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="0dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:passwordToggleEnabled="true">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_box_height"
                    android:background="@drawable/edit_text_back"
                    android:inputType="textPassword"
                    android:hint="Confirm Password"
                    android:layout_marginBottom="15dp"
                    android:paddingHorizontal="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

<!--            <TextView-->
<!--                android:id="@+id/label6"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginVertical="10dp"-->
<!--                android:text="Enter your Phone Number"-->
<!--                android:textSize="18sp" />-->

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_box_height"
                android:background="@drawable/edit_text_back"
                android:inputType="phone"
                android:hint="Your phone"
                android:layout_marginBottom="15dp"
                android:paddingHorizontal="10dp" />

<!--            <TextView-->
<!--                android:id="@+id/label4"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginVertical="10dp"-->
<!--                android:text="Select Your Location"-->
<!--                android:textSize="18sp" />-->

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/region"
                android:layout_width="match_parent"
                android:hint="Your Region"
                android:layout_marginBottom="15dp"
                android:layout_height="@dimen/edit_box_height"
                android:background="@drawable/edit_text_back" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_back"
                android:gravity="center"
                android:paddingHorizontal="75dp"
                android:paddingVertical="5dp"
                android:shadowColor="#636262"
                android:shadowDx="2"
                android:shadowDy="8"
                android:shadowRadius="8"
                android:text="Sign Up"

                android:backgroundTint="@color/hit_color"

                android:textAllCaps="false"
                android:textSize="18sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"

                android:paddingHorizontal="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have an account? go to  "
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#8A8383"
                    android:shadowDx="2"
                    android:shadowDy="8"
                    android:shadowRadius="8"
                    android:text="Log in"
                    android:textColor="#237883"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>


</ScrollView>